<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/layout_root"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:padding="10dp"
                         >
   
    
	<SeekBar
   android:layout_width="fill_parent"
   android:layout_height="wrap_content"
   android:layout_margin="10px"
   android:text="Select Distance"
   android:id="@+id/seekbar"
   android:max="10"
   android:progress="5"
   />
    
	<RadioGroup android:layout_width="fill_parent"
                 android:layout_height="wrap_content" android:orientation="vertical"
                 android:id="@+id/group1">
                 <TextView android:layout_width="fill_parent"
                         android:layout_height="wrap_content"
                         android:text="Choose Prerference" android:textStyle="bold" />
                 <RadioButton android:checked="false"
                         android:text="Food" android:id="@+id/food" />
                 <RadioButton android:checked="false" 
                     android:text="Drinks" android:id="@+id/drinks" />
                 <RadioButton android:checked="false"
                         android:text="Misc" android:id="@+id/misc" />
         </RadioGroup>
         
	     
	<Button
	android:id="@+id/getDeals"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:text="Get Deals"
	android:hapticFeedbackEnabled="true"
	/>
	<Button
	android:id="@+id/dismiss"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:text="CANCEL"
	android:hapticFeedbackEnabled="true"
	/>
	
    
</LinearLayout>